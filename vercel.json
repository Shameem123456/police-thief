{
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/host",
      "destination": "/public/host.html"
    },
    {
      "source": "/join",
      "destination": "/public/join.html"
    },
    {
      "source": "/lobby",
      "destination": "/public/lobby.html"
    },
    {
      "source": "/game",
      "destination": "/public/game.html"
    },
    {
      "source": "/results",
      "destination": "/public/results.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}
